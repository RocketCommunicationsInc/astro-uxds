{% extends "base.template.njk" %}

{% block content %}

	<link rel="stylesheet" href="/css/chapters.css">
	<link rel="stylesheet" href="/css/components.css">
	<link rel="stylesheet" href="/css/sample.css">

	<h1>{{ title }}</h1>
	{% if demo %}

		<div class="demo-container">

			<iframe id="live-sample" class="live-sample" scrolling="no" src="{{ demo }}" style="width: 100%; height: {{height}}; overflow: hidden;"></iframe>

			<div class="demo-container__sample-links">
				{% if storybook %}
					<a class="sample-links__storybook" href="https://astro-components.netlify.com/?path=/story/{{storybook}}">
						Storybook
					</a>
				{% endif %}
				{% if git %}
					<a class="sample-links__github" href="https://github.com/RocketCommunicationsInc/astro-components/tree/master/src/components/{{git}}">Github</a>
				{% endif %}
			</div>
		</div>
	{% endif %}

	{{ content | safe | removeHeader | doDont }}
	{% include "_compliance.njk" %}
{% endblock %}
